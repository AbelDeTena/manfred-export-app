{
  "extends": "@lemoncode/tsconfig/react.json",
  "include": ["src", "@/vite-env.d.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@": ["src"],
      "@/*": ["src/*"],
    },
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "jsx": "react",
    "noLib": false,
    "suppressImplicitAnyIndexErrors": true,
    "skipLibCheck": true,
    "esModuleInterop": true
},
}
