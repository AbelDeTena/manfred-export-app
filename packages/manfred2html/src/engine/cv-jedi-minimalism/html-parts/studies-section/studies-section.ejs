  <%_ if (studiesCollection && studiesCollection.length !== 0) { -%>
    <section >
      <h3><%- labels.STUDIES_HEADING %></h3>      
      <div class="section__content section__education">
      <%_ for (const study of studiesCollection) { -%>
        <div>
          <p><%- new Date(study.startDate).toLocaleDateString(undefined, { year:"numeric", month:"short"})%> <%_ if(study.finishDate && study.finishDate.toLowerCase() !=='actualidad') { -%>
            <%- "- "+new Date(study.finishDate).toLocaleDateString(undefined, { year:"numeric", month:"short"}) -%>
          <%_ } else { -%>
            - Actualidad
            <%_}-%>
          </p>
          <p><%- study.name %></p>
          <p><%- study.institution.name %></p>
        </div>       
        <%_ } -%>
      </div>
    </section>
    <hr class="hide" />
    <%_ } -%>